<Window x:Class="Reolmarked.View.ProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Administrer Produkter" Height="400" Width="650"
        WindowStartupLocation="CenterOwner"
        Background="LightSteelBlue">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Titel -->
        <TextBlock Text="Produkter" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Foreground="DarkBlue" 
                   Margin="0,0,0,10"/>

        <!-- Produktliste -->
        <ListView x:Name="ProductList" Grid.Row="1" AlternationCount="2" Margin="0,0,0,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" Width="50" DisplayMemberBinding="{Binding ProductId}" />
                    <GridViewColumn Header="Navn" Width="200" DisplayMemberBinding="{Binding ProductName}" />
                    <GridViewColumn Header="Pris" Width="100" DisplayMemberBinding="{Binding Price}" />
                    <GridViewColumn Header="Stregkode" Width="150" DisplayMemberBinding="{Binding Barcode}" />
                    <GridViewColumn Header="Kunde ID" Width="100" DisplayMemberBinding="{Binding CustomerId}" />
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Knapper -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="➕ Tilføj" Width="100" Margin="5" Click="AddProduct_Click"/>
            <Button Content="✏ Rediger" Width="100" Margin="5" Click="EditProduct_Click"/>
            <Button Content="🗑 Slet" Width="100" Margin="5" Click="DeleteProduct_Click"/>
            <Button Content="Luk" Width="100" Margin="5" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
