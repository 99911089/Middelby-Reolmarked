<Window x:Class="Reolmarked.View.CustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Administrer lejere" Height="400" Width="600"
        Background="#F0F0F0">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <!-- ListView fylder det meste af vinduet -->
            <RowDefinition Height="Auto"/>
            <!-- Knapper nederst -->
        </Grid.RowDefinitions>

        <!-- ListView viser alle lejere -->
        <ListView x:Name="TenantListView" Grid.Row="0" Margin="0,0,0,10" Background="White">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" Width="50" DisplayMemberBinding="{Binding TenantId}" />
                    <GridViewColumn Header="Navn" Width="150" DisplayMemberBinding="{Binding TenantName}" />
                    <GridViewColumn Header="Email" Width="200" DisplayMemberBinding="{Binding TenantEmail}" />
                    <GridViewColumn Header="Telefon" Width="100" DisplayMemberBinding="{Binding TenantPhone}" />
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Knapper til handlinger: Tilføj, Rediger, Slet -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
            <Button Content="Tilføj lejer" Margin="5" Click="AddTenant_Click"/>
            <Button Content="Rediger lejer" Margin="5" Click="EditTenant_Click"/>
            <Button Content="Slet lejer" Margin="5" Click="DeleteTenant_Click"/>
        </StackPanel>
    </Grid>
</Window>
