<Window x:Class="Reolmarked.View.AddCustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tilføj Kunde"
        Height="350" Width="400"
        WindowStartupLocation="CenterOwner"
        Background="LightSteelBlue">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Navn -->
        <StackPanel Orientation="Horizontal" Margin="0,5">
            <TextBlock Text="Navn:" Width="100" VerticalAlignment="Center"/>
            <TextBox x:Name="NameTextBox" Width="220"/>
        </StackPanel>

        <!-- Adresse -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,5">
            <TextBlock Text="Adresse:" Width="100" VerticalAlignment="Center"/>
            <TextBox x:Name="AddressTextBox" Width="220"/>
        </StackPanel>

        <!-- Telefon -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,5">
            <TextBlock Text="Telefon:" Width="100" VerticalAlignment="Center"/>
            <TextBox x:Name="PhoneTextBox" Width="220"/>
        </StackPanel>

        <!-- Email -->
        <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="0,5">
            <TextBlock Text="Email:" Width="100" VerticalAlignment="Center"/>
            <TextBox x:Name="EmailTextBox" Width="220"/>
        </StackPanel>

        <!-- Knapper -->
        <StackPanel Orientation="Horizontal" Grid.Row="4" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Gem" Width="90" Background="LightGreen" Margin="5" Click="Save_Click"/>
            <Button Content="Annuller" Width="90" Background="LightCoral" Margin="5" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
