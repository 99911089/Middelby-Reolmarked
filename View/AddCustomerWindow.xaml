<Window x:Class="Reolmarked.View.AddCustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Customer" Height="250" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Name:"/>
            <TextBox x:Name="NameTextBox" Margin="0,5"/>

            <TextBlock Text="Email:"/>
            <TextBox x:Name="EmailTextBox" Margin="0,5"/>

            <TextBlock Text="Phone:"/>
            <TextBox x:Name="PhoneTextBox" Margin="0,5"/>

            <Button Content="Save" Click="Save_Click" Margin="0,10"/>
        </StackPanel>
    </Grid>
</Window>
