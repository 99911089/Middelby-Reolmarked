<Window x:Class="Reolmarked.View.EditProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rediger Produkt"
        Height="300" Width="400"
        WindowStartupLocation="CenterOwner"
        Background="LightSteelBlue">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Produktnavn -->
        <StackPanel Orientation="Horizontal" Margin="0,5">
            <TextBlock Text="Navn:" Width="100" VerticalAlignment="Center"/>
            <TextBox x:Name="NameTextBox" Width="220"/>
        </StackPanel>

        <!-- Pris -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,5">
            <TextBlock Text="Pris:" Width="100" VerticalAlignment="Center"/>
            <TextBox x:Name="PriceTextBox" Width="220"/>
        </StackPanel>

        <!-- Stregkode -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,5">
            <TextBlock Text="Stregkode:" Width="100" VerticalAlignment="Center"/>
            <TextBox x:Name="BarcodeTextBox" Width="220"/>
        </StackPanel>

        <!-- Kunde-ID -->
        <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="0,5">
            <TextBlock Text="Kunde ID:" Width="100" VerticalAlignment="Center"/>
            <TextBox x:Name="CustomerIdTextBox" Width="220"/>
        </StackPanel>

        <!-- Knapper -->
        <StackPanel Orientation="Horizontal" Grid.Row="4" HorizontalAlignment="Center" Margin="0,15,0,0">
            <Button Content="Gem" Width="80" Background="LightGreen" Margin="5" Click="Save_Click"/>
            <Button Content="Annuller" Width="80" Background="LightCoral" Margin="5" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
